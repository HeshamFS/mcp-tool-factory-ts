{
  "name": "@heshamfsalama/mcp-tool-factory",
  "version": "0.1.0",
  "mcpName": "io.github.HeshamFS/mcp-tool-factory",
  "description": "Generate MCP servers from natural language descriptions, OpenAPI specs, or database schemas. Supports Claude, Claude Code, OpenAI, and Google Gemini.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js",
      "require": "./dist/cli/index.cjs"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.cjs"
    }
  },
  "bin": {
    "mcp-factory": "./bin/mcp-factory.js",
    "mcp-tool-factory-server": "./bin/mcp-server.js"
  },
  "files": [
    "dist",
    "bin",
    "server.json"
  ],
  "scripts": {
    "build": "tsup",
    "postbuild": "node -e \"require('fs').cpSync('src/templates', 'dist/templates', {recursive: true})\"",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HeshamFS/mcp-tool-factory-ts.git"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "ai",
    "tools",
    "agents",
    "llm",
    "claude",
    "openai",
    "gemini",
    "code-generation",
    "openapi",
    "database"
  ],
  "author": "Hesham Salama",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HeshamFS/mcp-tool-factory-ts/issues"
  },
  "homepage": "https://github.com/HeshamFS/mcp-tool-factory-ts#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.76",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "axios": "^1.7.9",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.7",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "ora": "^8.1.1",
    "zod": "^3.24.1"
  },
  "optionalDependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@google/generative-ai": "^0.21.0",
    "better-sqlite3": "^11.7.0",
    "openai": "^4.77.0",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  }
}
